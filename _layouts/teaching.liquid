---
layout: page
---

<article class="teaching-detail">

  <header class="teaching-header">
    <h1 class="teaching-title">{{ page.title }}</h1>

    {% if page.school_logo %}
      <img src="{{ page.school_logo }}" alt="{{ page.school }}" class="school-logo-large">
    {% endif %}
  </header>

  <p class="teaching-meta">
    {% if page.school %}
      <span class="school">{{ page.school }}</span>
    {% endif %}
    {% if page.semesters %}
      <span class="sep">â€¢</span>
      <span class="semesters">{{ page.semesters }}</span>
    {% endif %}
  </p>

  {% if page.short_description %}
    <p class="short-desc">{{ page.short_description }}</p>
  {% endif %}

  {% if page.long_description %}
    <div class="long-desc">
      {{ page.long_description | markdownify }}
    </div>
  {% else %}
    {{ content }}
  {% endif %}

  {% if page.syllabus %}
    <p class="syllabus-link">
      <a href="{{ page.syllabus | relative_url }}" target="_blank">ðŸ“„ View syllabus</a>
    </p>
  {% endif %}
</article>
