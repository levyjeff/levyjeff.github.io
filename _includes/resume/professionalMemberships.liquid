<ul class="membership-list">
  {% for m in data[1] %}
    <li class="mb-2">
      <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
        <span class="ml-1 ml-md-4" style="font-size: 1rem;">
          <a href="{{ m.url }}" style="font-weight: 600; text-decoration: none;">
            {{ m.organization }}
          </a>
          {% if m.position %}
            <span style="font-size: 0.95rem;"> — {{ m.position }}</span>
          {% endif %}
          {% if m.startDate %}
            <span class="text-muted" style="font-size: 0.9rem;">
              ({{ m.startDate | date: "%Y" }}{% if m.endDate %}–{{ m.endDate | date: "%Y" }}{% else %}–present{% endif %})
            </span>
          {% endif %}
        </span>

        {% if m.summary %}
          <p class="ml-1 ml-md-4 mb-0" style="font-size: 0.9rem; font-style: italic;">
            {{ m.summary }}
          </p>
        {% endif %}
      </div>
    </li>
  {% endfor %}
</ul>
